#!/usr/bin/make -f

#export DH_VERBOSE=1
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/buildflags.mk
CFLAGS+=$(CPPFLAGS)
CXXFLAGS+=$(CPPFLAGS)

ifneq (,$(filter armhf,$(DEB_HOST_ARCH)))
ARM_FLOAT_ABI = -DARM_FP_ABI=hard
else
ARM_FLOAT_ABI =
endif

NULL =

DESTDIR = debian/tmp

%:
	dh $@ --parallel --with systemd

.PHONY: override_dh_auto_configure override_dh_install override_dh_strip
override_dh_auto_configure:
	dh_auto_configure

override_dh_install:
	dh_install
	dh_missing --fail-missing

override_dh_strip:
	dh_strip -pogon-platform-qt --dbg-package=ogon-platform-qt-dbg

override_dh_clean:
	dh_clean

override_dh_installpam:
	dh_installpam -p ogon-platform-qt --name ogon

